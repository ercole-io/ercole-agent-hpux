bdf | sed 1d  | awk '{if (NF==1) {line=$0;getline;sub(" *"," ");print line$0} else {print}}' | awk '{ printf "%s\t\t???\t\t%f\t\t%f\t\t%f\t\t%s\t\t%s\n", $1, $2*1024, $3*1024, $4*1024, $5, $6 }'